{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "items": {
      "patternProperties": {
        ".{1,}": {
          "properties": {
            "category": {
              "pattern": ".{1,}",
              "type": "string"
            },
            "consumable": {
              "type": "boolean"
            },
            "consume_reward": {
              "$ref": "Hiro-Rewards"
            },
            "description": {
              "pattern": ".*",
              "type": "string"
            },
            "item_sets": {
              "items": {
                "pattern": ".{1,}",
                "type": "string"
              },
              "type": "array"
            },
            "max_count": {
              "minimum": 0,
              "type": "number"
            },
            "name": {
              "pattern": ".{1,}",
              "type": "string"
            },
            "numeric_properties": {
              "patternProperties": {
                ".{1,}": {
                  "type": "number"
                }
              },
              "type": "object"
            },
            "stackable": {
              "type": "boolean"
            },
            "string_properties": {
              "patternProperties": {
                ".{1,}": {
                  "pattern": ".{1,}",
                  "type": "string"
                }
              },
              "type": "object"
            }
          },
          "required": [
            "name",
            "category"
          ],
          "type": "object"
        }
      },
      "type": "object"
    }
  },
  "type": "object"
}
