{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "incentives": {
      "type": "object",
      "patternProperties": {
        ".{1,}": {
          "type": "object",
          "properties": {
            "type": {
              "type": "integer",
              "minimum": 0
            },
            "name": {
              "type": "string",
              "pattern": ".+"
            },
            "description": {
              "type": "string",
              "pattern": ".*"
            },
            "max_claims": {
              "type": "integer",
              "minimum": 0
            },
            "max_global_claims": {
              "type": "integer",
              "minimum": 0
            },
            "max_recipient_age_sec": {
              "type": "integer",
              "minimum": 0
            },
            "recipient_reward": {
              "$ref": "Hiro-Rewards"
            },
            "sender_reward": {
              "$ref": "Hiro-Rewards"
            },
            "max_concurrent": {
              "type": "integer",
              "minimum": 0
            },
            "expiry_duration_sec": {
              "type": "integer",
              "minimum": 0
            }
          },
          "required": [
            "type",
            "name",
            "max_claims",
            "max_global_claims",
            "expiry_duration_sec"
          ]
        }
      }
    }
  },
  "required": [
    "incentives"
  ]
}
