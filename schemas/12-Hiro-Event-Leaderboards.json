{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "event_leaderboards": {
      "type": "object",
      "patternProperties": {
        ".+": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "pattern": ".+"
            },
            "description": {
              "type": "string",
              "pattern": ".*"
            },
            "category": {
              "type": "string",
              "pattern": ".+"
            },
            "ascending": {
              "type": "boolean"
            },
            "operator": {
              "type": "string",
              "enum": [
                "best",
                "set",
                "incr",
                "decr",
                "increment",
                "decrement"
              ]
            },
            "reset_schedule": {
              "type": "string"
            },
            "cohort_size": {
              "type": "number",
              "minimum": 1
            },
            "additional_properties": {
              "type": "object",
              "patternProperties": {
                ".+": {
                  "type": "string"
                }
              }
            },
            "max_num_score": {
              "type": "number",
              "minimum": 0
            },
            "tiers": {
              "type": "number",
              "minimum": 1
            },
            "max_idle_tier_drop": {
              "type": "number",
              "minimum": 0
            },
            "start_time_sec": {
              "type": "number",
              "minimum": 0
            },
            "end_time_sec": {
              "type": "number",
              "minimum": 0
            },
            "duration": {
              "type": "number",
              "minimum": 0
            },
            "change_zones": {
              "type": "object",
              "patternProperties": {
                "[0-9]+": {
                  "type": "object",
                  "properties": {
                    "promotion": {
                      "type": "number",
                      "minimum": 0
                    },
                    "demotion": {
                      "type": "number",
                      "minimum": 0
                    },
                    "demote_idle": {
                      "type": "boolean"
                    }
                  }
                }
              }
            },
            "reward_tiers": {
              "type": "object",
              "patternProperties": {
                "[0-9]+": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "rank_min": {
                        "type": "number",
                        "minimum": 0
                      },
                      "rank_max": {
                        "type": "number",
                        "minimum": 0
                      },
                      "tier_change": {
                        "type": "number",
                        "minimum": 0
                      },
                      "reward": {
                        "$ref": "Hiro-Rewards"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "event_leaderboards"
  ],
  "type": "object"
}
