{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "active_slots": {
      "minimum": 0,
      "type": "number"
    },
    "max_active_slots": {
      "minimum": 0,
      "type": "number"
    },
    "slots": {
      "minimum": 0,
      "type": "number"
    },
    "slot_cost": {
      "type": "object",
      "properties": {
        "items": {
          "type": "object",
          "patternProperties": {
            ".{1,}": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "currencies": {
          "type": "object",
          "patternProperties": {
            ".{1,}": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      }
    },
    "unlockables": {
      "type": "object",
      "patternProperties": {
        ".{1,}": {
          "type": "object",
          "properties": {
            "probability": {
              "type": "number",
              "minimum": 0
            },
            "category": {
              "type": "string",
              "pattern": ".{1,}"
            },
            "cost": {
              "type": "object",
              "properties": {
                "items": {
                  "type": "object",
                  "patternProperties": {
                    ".{1,}": {
                      "type": "number",
                      "minimum": 0
                    }
                  }
                },
                "currencies": {
                  "type": "object",
                  "patternProperties": {
                    ".{1,}": {
                      "type": "number",
                      "minimum": 0
                    }
                  }
                }
              }
            },
            "cost_unit_time_sec": {
              "type": "number",
              "minimum": 0
            },
            "description": {
              "type": "string",
              "pattern": ".{1,}"
            },
            "name": {
              "type": "string",
              "pattern": ".{1,}"
            },
            "start_cost": {
              "type": "object",
              "properties": {
                "items": {
                  "type": "object",
                  "patternProperties": {
                    ".{1,}": {
                      "type": "number",
                      "minimum": 0
                    }
                  }
                },
                "currencies": {
                  "type": "object",
                  "patternProperties": {
                    ".{1,}": {
                      "type": "number",
                      "minimum": 0
                    }
                  }
                }
              }
            },
            "reward": {
              "$ref": "Hiro-Rewards"
            },
            "wait_time_sec": {
              "type": "number",
              "minimum": 0
            },
            "additional_properties": {
              "patternProperties": {
                ".{1,}": {
                  "type": "string"
                }
              },
              "type": "object"
            }
          },
          "required": [
            "probability",
            "category",
            "name"
          ]
        }
      }
    }
  },
  "required": [
    "active_slots",
    "max_active_slots",
    "slots",
    "unlockables"
  ],
  "type": "object"
}
